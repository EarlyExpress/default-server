# ========================================
# 로컬 환경 (.env.local)
# PostgreSQL 데이터베이스 사용 (Docker Compose)
# ========================================

# Application
APP_PROFILE=local
APP_PORT=4000
APP_NAME=default-server

# Eureka (Config Server의 기본 설정 사용)
EUREKA_DEFAULT_ZONE=http://localhost:3150/eureka/,http://localhost:3151/eureka/
EUREKA_INSTANCE_HOSTNAME=default-server-local

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=default_db
DB_USERNAME=postgres
DB_PASSWORD=postgres123!

# Kafka (3개 브로커 클러스터)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_CONSUMER_GROUP_ID=default-server-group

# Observability
ZIPKIN_ENABLED=true
ZIPKIN_BASE_URL=http://localhost:9411
TRACING_PROBABILITY=1.0

# WebClient (기본값)
WEBCLIENT_CONNECTION_TIMEOUT=5000
WEBCLIENT_READ_TIMEOUT=10000
WEBCLIENT_WRITE_TIMEOUT=10000